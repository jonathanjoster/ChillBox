extends layout

block content
  link(rel='stylesheet', href='/stylesheets/styleS.css')
  body
    .container-fluid.container-800
      .data-wrapper.mx-auto
        h1.font-italic #{music.name}
        h4 Artist: 
          span.font-italic #{music.artist}
        .d-flex.justify-content-end.mb-3
          a(href=`/musics/${music.name}/edit`) Edit
          a(href="/").ml-3 Home
        p Url: 
          - var url = music.url
          if url
            a(href=url) #{url}
          else
            | -
        p Type: #{music.type}
        p Attribute: 
          if music.attribute === 'comfortable'
            span.comfortable #{music.attribute}
          else if music.attribute
            span.dark #{music.attribute}
          else
            | -
        p UpdatedAt: #{music.updatedAt}
        p note: #{music.note || '-'}

      if url.includes('youtube')
        .youtube-wrapper
          iframe(data-src=url frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen)
      else if url.includes('soundcloud')
        iframe(width="100%" height="300" data-src=url)

      script(src="/javascripts/script.js")